<div class="admin-container">
    <div class="header-actions">
        <h1>Manage Sections</h1>
        <a href="/admin/sections/add" class="btn-primary">Add New Section</a>
    </div>

    <div class="table-responsive">
        <table class="admin-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Museum</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% sections.forEach(section=> { %>
                    <tr>
                        <td>
                            <%= section.name %>
                        </td>
                        <td>
                            <%= section.museumId ? section.museumId.name : 'N/A' %>
                        </td>
                        <td>
                            <a href="/admin/sections/edit/<%= section._id %>" class="btn-sm edit">Edit</a>
                            <form action="/admin/sections/<%= section._id %>?_method=DELETE" method="POST"
                                style="display:inline;">
                                <button type="submit" class="btn-sm delete"
                                    onclick="return confirm('Are you sure?')">Delete</button>
                            </form>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>
</div>