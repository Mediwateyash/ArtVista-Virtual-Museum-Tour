<div class="admin-container">
    <h1>Edit Section</h1>
    <form action="/admin/sections/<%= section._id %>?_method=PUT" method="POST" class="admin-form">
        <div class="form-group">
            <label>Section Name</label>
            <input type="text" name="name" value="<%= section.name %>" required>
        </div>
        <div class="form-group">
            <label>Museum</label>
            <select name="museumId" required>
                <% museums.forEach(museum=> { %>
                    <option value="<%= museum._id %>" <%=section.museumId.toString()===museum._id.toString()
                        ? 'selected' : '' %>><%= museum.name %>
                    </option>
                    <% }) %>
            </select>
        </div>
        <button type="submit" class="btn-primary">Update Section</button>
    </form>
</div>