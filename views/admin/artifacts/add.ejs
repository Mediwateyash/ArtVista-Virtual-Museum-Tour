<div class="admin-container">
    <h1>Add New Artifact</h1>
    <form action="/admin/artifacts" method="POST" class="admin-form">
        <div class="form-group">
            <label>Artifact Name</label>
            <input type="text" name="name" required>
        </div>
        <div class="form-group">
            <label>Image URL</label>
            <input type="url" name="imageUrl" required>
        </div>
        <div class="form-group">
            <label>Description</label>
            <textarea name="description" rows="4" required></textarea>
        </div>
        <div class="form-group">
            <label>Period</label>
            <input type="text" name="period" required>
        </div>
        <div class="form-group">
            <label>Museum</label>
            <select name="museumId" required>
                <% museums.forEach(museum=> { %>
                    <option value="<%= museum._id %>">
                        <%= museum.name %>
                    </option>
                    <% }) %>
            </select>
        </div>
        <div class="form-group">
            <label>Section</label>
            <select name="sectionId" required>
                <% sections.forEach(section=> { %>
                    <option value="<%= section._id %>">
                        <%= section.name %>
                    </option>
                    <% }) %>
            </select>
        </div>
        <button type="submit" class="btn-primary">Add Artifact</button>
    </form>
</div>