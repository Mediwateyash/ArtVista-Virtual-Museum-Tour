<div class="admin-container">
    <h1>Edit Museum</h1>
    <form action="/admin/museums/<%= museum._id %>?_method=PUT" method="POST" class="admin-form">
        <div class="form-group">
            <label>Museum Name</label>
            <input type="text" name="name" value="<%= museum.name %>" required>
        </div>
        <div class="form-group">
            <label>Location</label>
            <input type="text" name="location" value="<%= museum.location %>" required>
        </div>
        <div class="form-group">
            <label>Description</label>
            <textarea name="description" rows="4" required><%= museum.description %></textarea>
        </div>
        <div class="form-group">
            <label>Timings</label>
            <input type="text" name="timings" value="<%= museum.timings %>" required>
        </div>
        <div class="form-group">
            <label>Image URL</label>
            <input type="url" name="imageUrl" value="<%= museum.imageUrl %>" required>
        </div>
        <button type="submit" class="btn-primary">Update Museum</button>
    </form>
</div>