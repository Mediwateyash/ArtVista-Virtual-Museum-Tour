<div class="container">
    <h1 class="page-title">Explore Museums</h1>

    <div class="museum-grid">
        <% museums.forEach(museum=> { %>
            <div class="museum-card">
                <img src="<%= museum.imageUrl %>" alt="<%= museum.name %>" class="museum-img">
                <div class="museum-info">
                    <h2>
                        <%= museum.name %>
                    </h2>
                    <p class="location">
                        <%= museum.location %>
                    </p>
                    <div class="museum-actions">
                        <a href="/tour/<%= museum._id %>" class="btn-primary">Start Virtual Tour</a>
                        <a href="/museums/<%= museum._id %>" class="btn-secondary">Visit Physically</a>
                        <a href="/bookings/book/<%= museum._id %>" class="btn-accent">Book Ticket</a>
                    </div>
                </div>
            </div>
            <% }) %>
    </div>
</div>

<style>
    .container {
        padding: 3rem 2rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    .page-title {
        text-align: center;
        margin-bottom: 3rem;
        color: var(--secondary-color);
    }

    .museum-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
    }

    .museum-card {
        background: #fff;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s;
    }

    .museum-card:hover {
        transform: translateY(-5px);
    }

    .museum-img {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }

    .museum-info {
        padding: 1.5rem;
    }

    .museum-info h2 {
        margin-bottom: 0.5rem;
        color: var(--secondary-color);
    }

    .location {
        color: #666;
        margin-bottom: 1.5rem;
        font-style: italic;
    }

    .museum-actions {
        display: flex;
        flex-direction: column;
        gap: 0.8rem;
    }

    .btn-secondary {
        background: transparent;
        border: 2px solid var(--secondary-color);
        color: var(--secondary-color);
        padding: 0.7rem;
        text-align: center;
        text-decoration: none;
        border-radius: 5px;
        font-weight: 600;
        transition: all 0.3s;
    }

    .btn-secondary:hover {
        background: var(--secondary-color);
        color: #fff;
    }

    .btn-accent {
        background: #e91e63;
        color: #fff;
        padding: 0.7rem;
        text-align: center;
        text-decoration: none;
        border-radius: 5px;
        font-weight: 600;
        transition: background 0.3s;
    }

    .btn-accent:hover {
        background: #c2185b;
    }
</style>